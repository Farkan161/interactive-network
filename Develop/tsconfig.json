{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",        // ✅ Force CommonJS
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,     // ✅ So 'import express from "express"' works
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
